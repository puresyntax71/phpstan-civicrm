{
    "name": "mglaman/phpstan-civicrm",
    "description": "Extension for [PHPStan](https://phpstan.org) to allow static analysis of CiviCRM.",
    "type": "phpstan-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Glaman",
            "email": "nmd.matt@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^1.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "civicrm/civicrm-core": "^5.30",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.1.4",
        "phpstan/extension-installer": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "PHPStan\\CiviCRM\\": "src/"
        }
    },
    "autoload-dev": {
        "PHPStan\\CiviCRM\\Tests": "tests/src"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
